{
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "back/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/back/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/front/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Connection",
          "value": "Upgrade"
        },
        {
          "key": "Upgrade",
          "value": "websocket"
        }
      ]
    }
  ]
}
