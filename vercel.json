{
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "back/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/back/$1" },
    { "src": "/front/(.*)", "dest": "/front/index.html" }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/front/index.html"
    }
  ]
}
